<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">


    <TextView
        android:background="#F44336"
        android:textSize="20sp"
        android:id="@+id/btnView1"
        android:text="red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#4CAF50"
        android:textSize="20sp"
        android:id="@+id/btnView2"
        android:layout_below="@id/btnView1"
        android:text="green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#673AB7"
        android:textSize="20sp"
        android:layout_below="@id/btnView2"
        android:id="@+id/btnView3"
        android:text="blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#FF9800"
        android:textSize="20sp"
        android:id="@+id/btnView4"
        android:layout_below="@id/btnView3"
        android:text="orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#00BCD4"
        android:textSize="20sp"
        android:id="@+id/btnView5"
        android:layout_below="@id/btnView4"
        android:text="gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#8BC34A"
        android:textSize="20sp"
        android:id="@+id/btnView6"
        android:layout_below="@id/btnView5"
        android:text="prink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>